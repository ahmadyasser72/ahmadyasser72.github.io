{
  "semi": true,
  "singleQuote": false,
  "endOfLine": "crlf",

  "plugins": [
    "prettier-plugin-astro",
    "prettier-plugin-tailwindcss",
    "@ianvs/prettier-plugin-sort-imports"
  ],
  "overrides": [
    {
      "files": "*.astro",
      "options": {
        "parser": "astro"
      }
    }
  ],

  "importOrder": [
    "^[.]",
    "",
    "^\\$lib",
    "",
    "^astro[:/]?",
    "",
    "<THIRD_PARTY_MODULES>"
  ]
}
